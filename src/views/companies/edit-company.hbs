<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/companies/edit-company/{{company._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" value="{{company.name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="nit" class="form-control" placeholder="NIT" value="{{company.nit}}">
                </div>
                <div class="form-group">
                    <input type="text" name="address" class="form-control" placeholder="Address" value="{{company.address}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-principal btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>