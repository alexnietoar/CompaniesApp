<div class="row">
    {{#if user.admin}}
        {{#each companies}}
            <div class= "col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{name}}<a href="/companies/edit/{{_id}}"><i class="far fa-edit black-text"></i></a>
                        </h4>
                        <hr>
                        <h5>NIT: {{nit}}</h5>
                        <h5>Address: {{address}}</h5>
                        <form action="/companies/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-dangerr btn-block btn-sm" type="submit">
                                    Delete
                                </button>
                        </form>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="card mx-auto">
                    <div class="card-body">
                        <h1>Hello {{user.profile.0.name}}</h1>
                        <p class="lead">There are not companies yet.</p>
                        <a href="/companies/add" class="btn btn-success btn-block">Register one!</a>
                    </div>
                </div>
        {{/each}}
    {{else}}
        {{#each companies}}
            <div class= "col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{name}} <i class="fas fa-building company-i"></i>
                        </h4>
                        <hr>
                        <h5>NIT: {{nit}}</h5>
                        <h5>Address: {{address}}</h5>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="card mx-auto">
                    <div class="card-body">
                        <h1>Hello {{user.profile.0.name}}</h1>
                        <p class="lead">Sorry! There are not companies yet :(</p>
                    </div>
                </div>
        {{/each}}
    {{/if}}
</div>